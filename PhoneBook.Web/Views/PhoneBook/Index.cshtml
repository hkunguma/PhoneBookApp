@model IEnumerable<PhoneBookVM>

@{
    ViewData["Title"] = "Index";
}

<h2>Phone Books</h2>

<p><a asp-action="Create">Create</a></p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <a asp-action="SearchEntries" asp-controller="Entry" asp-route-phoneBookId="@item.Id">Search</a>
                    <a asp-action="Create" asp-controller="Entry" asp-route-phoneBookId="@item.Id">Add Entry</a>
                </td>
            </tr>
        }
    </tbody>
</table>



