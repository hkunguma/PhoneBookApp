@model PhoneBookEntries
@{
    ViewData["Title"] = "SearchEntries";
}

<h2>SearchEntries</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.PhoneBook.Id)</dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneBook.Id)
        </dd>
        <dt>@Html.DisplayNameFor(model => model.PhoneBook.Name)</dt>
        <dd>@Html.DisplayFor(model => model.PhoneBook.Name)</dd>

    </dl>
    <div class="row">
        <form asp-action="SearchEntries">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PhoneBookId" type="hidden" />
            <div class="form-group">
                <label asp-for="SearchTerm" class="control-label"></label>
                <input asp-for="SearchTerm" class="form-control" />
                <span asp-validation-for="SearchTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search Entries" class="btn btn-default" />
            </div>
        </form>
    </div>
        
    <table class="table">
        <tr>
            <th>Entry Id</th>
            <th>Entry Name</th>
            <th>Entry PhoneNumber</th>
        </tr>
        @foreach (var item in Model.Entries)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Index" asp-controller="PhoneBook">Back to List</a>
</div>
